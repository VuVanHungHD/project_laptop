            </ul>

        </div>
        <div class="header__top__right__auth mr-1">
            @if (Session["USER_NAME"] != null)
            {
                <a href="@Url.Action("Details", "Users")"><i class="fa fa-user"></i> @Session["USER_NAME"]</a>

            }
        </div>
        <div class="humberger__menu__widget">
            @if (Session["USER_NAME"] == null)
            {
                <div class="header__top__right__auth">
