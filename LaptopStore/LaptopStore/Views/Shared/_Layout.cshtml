    <script>
        $(".ratingStar").hover(function () {
            $(".ratingStar").addClass("fa-star-o").removeClass("fa-star");

            $(this).addClass("fa-star").removeClass("fa-star-o");
            $(this).prevAll(".ratingStar").addClass("fa-star").removeClass("fa-star-o");

            var starValue = $(this).attr("data-value");
            $("#ratingValue").val(starValue);
            $("#rating").val(starValue);
        });
        $("#ratingValue").val("1");

        $("#rating").val("1");

        $(".ratingStar").click(function () {
            var starValue = $(this).attr("data-value");
            $("#ratingValue").val(starValue);
            $("#rating").val(starValue);
        });
    function addCart(id, count) {
        const formData = new FormData();
        formData.append("idProduct", id);
        formData.append("countProduct", count);
        fetch("@Url.Action("AddToCart", "Cart")", {
            method: 'POST',
            body: formData
        }).then(() => {
            alert("Đã thêm vào giỏ hàng!");
        });
    }
