    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục</span>
                        </div>
                        <ul>
                            @foreach (var cate in ViewBag.categoriesInMenu)
                            {
                                <li><a href="@Url.Action("Details", "Category", new {id=cate.id})">@cate.name</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            @using (Html.BeginForm("Search", "Products", FormMethod.Get))
                            {
                                @Html.TextBox("search", ViewBag.search as string, new { @placeholder = "Tìm kiếm gì đó..." })
