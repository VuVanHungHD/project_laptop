@{
    ViewBag.Title = "Home Page";
}

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var p in ViewBag.top6View)
                {
                    <div class="bord_slide">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="@p.imageUrl">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="@Url.Action("Details", "Products", new { id = p.id})"><i class="fa fa-eye"></i></a></li>
                                    <li><a href="javascript:void(0);" onclick="view(@p.id)"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="javascript:void(0);" onclick="addCart(@p.id, 1)"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h7><a href="@Url.Action("Details", "Products", new { id = p.id})">@p.shortDescript</a></h7>
                                <h5 class="sz1">
                                    <em class="sale">@String.Format("{0:0,0}", @p.price)</em>
                                    <x class="no_sale">@String.Format("{0:0,0}", ((@p.price * 100) / (100 - @p.percentSale))) </x>
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2><a href="@Url.Action("Index", "Products")">Sản phẩm mới</a></h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var p in ViewBag.top8New)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat bord">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@p.imageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a href="@Url.Action("Details", "Products", new { id = p.id})" onclick="view(@p.id)"><i class="fa fa-eye"></i></a></li>
                                <li><a href="javascript:void(0);" onclick="view(@p.id)"><i class="fa fa-heart"></i></a></li>
                                <li><a href="javascript:void(0);" onclick="addCart(@p.id, 1)"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h7><a href="@Url.Action("Details", "Products", new { id = p.id})" onclick="view(@p.id)">@p.shortDescript</a></h7>
                            <h5 class="sz1">
                                <em class="sale">@String.Format("{0:0,0}", @p.price)</em>
                                <x class="no_sale">@String.Format("{0:0,0}", ((@p.price * 100) / (100 - @p.percentSale))) </x>
                            </h5>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
