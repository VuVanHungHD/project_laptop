@model LaptopStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@Model.imageUrl" alt="">
                    </div>

                </div>
                <div class="uu_dai">
                    <ul class="list-unstyled">
                        <li>
                            <i class="icon_star"></i>
                            <span>Chất lượng sản phẩm là hàng đầu</span>
                        </li>
                        <li>
                            <i class="icon_star"></i>
                            <span>Dùng test máy 15 ngày đầu lỗi 1 đổi 1</span>
                        </li>
                        <li>
                            <i class="icon_star"></i>
                            <span> Hỗ trợ và hậu mãi sau bán hàng tốt nhất</span>
                        </li>
                        <li>
                            <i class="icon_star"></i>
                            <span>  Trả góp lãi suất 0% qua thẻ visa</span>
                        </li>
                        <li>
                            <i class="icon_star"></i>
                            <span> Giao hàng toàn quốc nhanh nhất</span>
                        </li>
                    </ul>

                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.name</h3>
                    <input type="hidden" value="@Model.id" id="idProduct">
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 reviews)</span>
                    </div>
                    <div class="product__details__rating">
                        <i class="fa fa-heart"></i>
                        <span>@Model.viewCount views</span>
                    </div>
                    <div class="product__details__price">@String.Format("{0:0,0 VNĐ}", @Model.promotionPrice)</div>
                    <div class="product__details__price"><x class="no_sale">@String.Format("{0:0,0}", Model.price) VNĐ</x></div>
                    <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1" id="countProduct">
                            </div>

                        </div>
                    </div>
                    <button type="submit" class="primary-btn" onclick="addItemIntoCart()">Thêm vào giỏ</button>
                    <a href="javascript:void(0)" class="heart-icon" onclick="view(@Model.id)"><span class="icon_heart_alt"></span></a>
                    <p>
                        <b>Trạng thái</b> <span>@Model.status</span>
                        <br />
                        <b>Bảo hành</b> @Model.warranty
                    </p>

                    <div class="info">
                        <h3>Thông số kỹ thuật</h3>
                        <strong style="color:#2b80dd">@Model.name</strong>
                        <table class="table table-striped table-bordered" style="height: 210px; float: left;" width="252">
                            <tbody>
                                <tr>
                                    <td><b>CPU</b></td>
                                    <td><span>@Model.cpu</span></td>
                                </tr>
                                <tr>
                                    <td><b>RAM</b></td>
                                    <td><span>@Model.ram</span></td>
                                </tr>
                                <tr>
                                    <td><b>Ổ cứng</b></td>
                                    <td><span>@Model.hardDrive</span></td>
                                </tr>
                                <tr>
                                    <td><b>Card VGA</b></td>
                                    <td><span>@Model.cardVGA</span></td>
                                </tr>
                                <tr>
                                    <td><b>Màn hình</b></td>
                                    <td><span>@Model.screenMonitor</span></td>
                                </tr>
                                <tr>
                                    <td><b>Cổng kết nối</b></td>
                                    <td><span>@Model.connector</span></td>
                                </tr>
                                <tr>
                                    <td><b>Trọng lượng</b></td>
                                    <td><span>@Model.weight</span></td>
                                </tr>
                                <tr>
                                    <td><b>Pin</b></td>
                                    <td><span>@Model.battery</span></td>
                                </tr>
                                <tr>
                                    <td><b>Hệ điều hành</b></td>
                                    <td><span>@Model.operatingSystem</span></td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <h3>Mô tả</h3>
                        </li>
                    </ul>
                    <div class="tab-content">
                        @*<p>@Model.content</p>*@
                        @Html.Raw(Model.content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
