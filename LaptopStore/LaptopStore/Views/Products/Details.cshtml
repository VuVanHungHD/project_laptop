            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <h3>Mô tả</h3>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <p>@Model.descript</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
