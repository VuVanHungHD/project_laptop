@model PagedList.IPagedList<LaptopStore.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Các sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Product Section Begin -->
<section class="" style="padding-bottom:20px; padding-top:20px">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12">
                <div class="filter__item">
                    <div class="row">
                        @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @class = "col-8 d-flex flex-row" }))
                        {
                            <div class="col-lg-4 col-md-4 pt-2">
                                <div class="filter__sort">
                                    <span>Sắp xếp theo </span>
                                    <select name="orderBy">
                                        <option value="id">Ngày tạo</option>
                                        <option value="name">Tên</option>
                                        <option value="price">Giá</option>
                                        <option value="viewCount">Lượt xem</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-2 pt-2">
                                <div class="filter__sort">
                                    <span>Kiểu</span>
                                    <select name="orderType">
                                        <option value="ASC">Tăng dần</option>
                                        <option value="DESC">Giảm dần</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-2">
                                <div class="filter__sort">
                                    <input type="submit" class="site-btn" value="áp dụng" />
                                </div>
                            </div>

                        }
                        @*<div class="col-lg-4 col-md-4 pt-2">
                            <div class="filter__found">
                                <h6>Hiển thị <span>@Model.Count</span> sản phẩm</h6>
                            </div>
                        </div>*@

                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 mix oranges fresh-meat bord">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="@item.imageUrl">
                                    <ul class="featured__item__pic__hover">
                                        <li><a href="@Url.Action("Details", "Products", new { id = item.id})"><i class="fa fa-eye"></i></a></li>
                                        <li><a href="javascript:void(0);" onclick="view(@item.id)"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="javascript:void(0);" onclick="addCart(@item.id, 1)"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h7><a href="@Url.Action("Details", "Products", new { id =item.id})">@item.shortDescript</a></h7>
                                    <h5 class="sz1">
                                        <em class="sale">@String.Format("{0:0,0}", @item.promotionPrice)</em>
                                        <x class="no_sale">@String.Format("{0:0,0}",  @item.price) </x>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="product__pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, size = ViewBag.size, search = ViewBag.search }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
