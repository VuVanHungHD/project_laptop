
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Product Section Begin -->
<section class="" style="padding-bottom:20px; padding-top:20px">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12 container">
                <h4 class="mb-1" style="text-align: center">Chi tiết danh mục:  @ViewBag.category.name</h4>
                <div class="row">
                    <p style="text-indent: 50px">
                        @ViewBag.category.descript
                    </p>
                </div>
                <h5 class="row mt-1 mb-1" style="text-align: center">Danh mục con:</h5>
                <div class="row mt-3 mb-3">
                    @foreach (var c in ViewBag.categoriesChild)
                    {

                        <div class="col-lg-3  p-5 shadow">
                            <h5><a href="@Url.Action("Details", "Category", new { id = c.id})">@c.name</a></h5>
                        </div>

                    }
                </div>
                <h5 class="row mt-3 mb-3" style="text-align: center">Sản phẩm thuộc danh mục: </h5>
                <div class="row">
                    @foreach (var item in ViewBag.product)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 mix oranges fresh-meat bord">
                            @*<div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg="@item.imageUrl">
                                        <ul class="featured__item__pic__hover">
                                            <li><a href="@Url.Action("Details", "Products", new { id = item.id})"><i class="fa fa-eye"></i></a></li>
                                            <li><a href="javascript:void(0);" onclick="like(@item.id)"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="javascript:void(0);" onclick="addCart(@item.id, 1)"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                        <h6><a href="@Url.Action("Details", "Products", new { id = item.id})">@item.name</a></h6>
                                        <h5>@item.price VNĐ</h5>
                                    </div>
                                </div>*@

                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="@item.imageUrl">
                                    <ul class="featured__item__pic__hover">
                                        <li><a href="@Url.Action("Details", "Products", new { id = item.id})"><i class="fa fa-eye"></i></a></li>
                                        <li><a href="javascript:void(0);" onclick="like(@item.id)"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="javascript:void(0);" onclick="addCart(@item.id, 1)"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h7><a href="@Url.Action("Details", "Products", new { id =item.id})">@item.shortDescript</a></h7>
                                    <h5 class="sz1">
                                        <em class="sale">@String.Format("{0:0,0}", @item.promotionPrice)</em>
                                        <x class="no_sale">@String.Format("{0:0,0}", @item.price) </x>
                                    </h5>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
